<Window x:Class="VLHCS_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VLHCS_Launcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="START SERVER" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="109" Height="43" Click="Button_Click" RenderTransformOrigin="-0.513,0.363"/>



        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="319" Margin="10,90,0,0" VerticalAlignment="Top" Width="772">
            <ScrollViewer>
                <TextBlock x:Name="ConsoleData" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="400" Width="772" Background="#FFCDCDCD"/>
            </ScrollViewer>
        </Border>
        <Label Content="Console" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        



    </Grid>
</Window>
